<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- dark/night theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#545757</item>
        <item name="colorPrimaryDark">#181717</item>
        <item name="colorAccent">#E7E8E9</item>
        <item name="backgroundColor">#141414</item>
        <item name="textColor">#E4E6EB</item>
        <item name="CardViewColor">#141414</item>
    </style>
    <!-- White theme. -->
    <style name="whiteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="backgroundColor">#03A9F4</item>
        <item name="textColor">#0F0F0F</item>
        <item name="CardViewColor">#fff</item>
    </style>
    <style name="AppThemeDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
